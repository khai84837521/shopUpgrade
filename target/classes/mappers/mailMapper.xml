<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shopUpdate.mappers.mailMapper">
    <select id="emailCheck" resultType="com.shopUpdate.domain.MailDTO">
        SELECT * FROM mail WHERE email = #{email}
    </select>

    <select id="mailSelectOne" resultType="String">
        SELECT ${column} FROM mail WHERE email = #{email}
    </select>

    <insert id="mailCodeInsert">
        insert into mail(mailCode,mailCreateDt, email) values (#{mailCode}, #{mailCreateDt}, #{email})
    </insert>

    <update id="mailCodeUpdate">
        UPDATE mail set mailCode = #{mailCode} WHERE email = #{email}
    </update>

</mapper>